<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    tools:background="@color/blue_bg">

    <ImageView
        android:id="@+id/whos_played"
        android:layout_width="40dp"
        android:layout_height="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_pic" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/whos_played"
        app:layout_constraintEnd_toEndOf="@+id/whos_played"
        app:layout_constraintStart_toStartOf="@+id/whos_played"
        app:layout_constraintTop_toTopOf="@+id/whos_played"
        app:srcCompat="@drawable/ellipse" />

    <TextView
        android:id="@+id/whos_played_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserat_light"
        android:textColor="@android:color/white"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/whos_played"
        app:layout_constraintStart_toStartOf="@+id/whos_played"
        app:layout_constraintTop_toBottomOf="@+id/whos_played"
        tools:text="Taufiq" />
</androidx.constraintlayout.widget.ConstraintLayout>